pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from Git repository
                git url: 'https://github.com/caligha/flask_web_app.git'
            }
        }
        
        stage('Deploy') {
            steps {
                // Run Ansible playbook for deployment
                ansiblePlaybook(
                    playbook: '/home/centos/flask_web_app/deploy_flask.yml',
                    inventory: '/home/centos/flask_web_app/inventory',
                    credentialsId: 'your-ansible-credentials-id'
                )
            }
        }
        
        stage('Build') {
            steps {
                // Install dependencies and run tests
                sh 'pip install -r requirements.txt'
                sh 'python test.py'
            }
        }
    }
    
    post {
        always {
            // Any post-build actions can go here
        }
    }
}
